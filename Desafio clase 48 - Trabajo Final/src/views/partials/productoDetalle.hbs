<div id="productList" class="row row-cols-1">
        {{#if listaDeProductos}}
          <div class="col ">
            <div class="card h-100 glass" >
              <div class="row justify-content-between g-0 ">
                <div class="col-md-3">
                  <img
                    src="{{listaDeProductos.imageURL}}"
                    class="card-img-top"
                    alt="{{listaDeProductos.description}}"
                  />
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                        <p class="mb-0">
                          <span class="badge bg-secondary">{{listaDeProductos.category}} </span>
                        </p>
                    <h5 class="card-title mt-2">{{listaDeProductos.name}}</h5>
                        <p class="card-text">{{listaDeProductos.description}}</p>
                    <div class="row justify-content-between">
                      <div class="col">
                        <p class="mb-1">
                          Precio
                        </p>
                        <span class="mb-2"><strong>${{listaDeProductos.price}}</strong> </span>
                      </div>
                      <div class="col">
                        <p class="mb-0">
                          Stock
                        </p>
                        <span class="mb-2"><strong>{{listaDeProductos.stock}} U</strong> </span>
                      </div>
                      <div class="col">  

       <div >          
           <table >
               <tbody>
                   <tr class="btn-group" Role="group">
                      <td align="left"><button class="btn btn-outline-secondary" style="width: 2vw;" onClick=''><strong>-</strong></button></td>
                      <td align="center"><button class="btn btn-outline" Style='' ><strong>1</strong></button></td>
                      <td align="right"><button class="btn btn-outline-secondary" style="width: 2vw;" onClick=''><strong>+</strong></button></td>                       
                   </tr> 
                   <br/>
                   <br/>                  
                   <tr>                   
                      <td align="right" colSpan="5">
                      <br/>
                      <button class="btn btn-primary" productId="{{listaDeProductos._id}}">
                      Agregar al carrito
                      </button> </button>
                      </td>
                   </tr>
               </tbody>
           </table>       
       </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{else}}
          <div class="container text-center glass">
            <h2>No se encontr√≥ ese producto</h2>
          </div>          
        {{/if}}